{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": ".build",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "strict": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
